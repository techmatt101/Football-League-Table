@model FootballLeagueTable.Models.LeagueTable.CompareView
@{
    ViewBag.Title = "Compare Teams";
}

<h2>Compare Teams</h2>
<hr />

<div class="row">
    <section class="col-md-4">
        <h3>@Model.TeamOne.Name</h3>
        <ul>
            <li>@Model.TeamOne.MatchHistory.Points</li>
            <li>@Model.TeamOne.MatchHistory.GoalDifference</li>
        </ul>
    </section>
    
    <section class="col-md-4">
        <h3>Difference</h3>
        <ul>
            <li>@Model.PointDifference</li>
            <li>@Model.GoalDifference</li>
        </ul>
    </section>

    <section class="col-md-4">
        <h3>@Model.TeamTwo.Name</h3>
        <ul>
            <li>@Model.TeamTwo.MatchHistory.Points</li>
            <li>@Model.TeamTwo.MatchHistory.GoalDifference</li>
        </ul>
    </section>
</div>