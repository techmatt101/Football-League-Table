@model FootballLeagueTable.Models.Account.RegisterView
@{
    ViewBag.Title = "Register";

    var inputStyles = new {htmlAttributes = new {@class = "form-control"}};
    var lableStyles = new {@class = "col-md-2 control-label"};
    var validationStyles = new {@class = "text-danger"};
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"})) {
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", validationStyles)

    <div class="form-group">
        @Html.LabelFor(m => m.Username, lableStyles)
        <div class="col-md-10">
            @Html.EditorFor(m => m.Username, inputStyles)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, lableStyles)
        <div class="col-md-10">
            @Html.EditorFor(m => m.Email, inputStyles)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, lableStyles)
        <div class="col-md-10">
            @Html.EditorFor(m => m.Password, inputStyles)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, lableStyles)
        <div class="col-md-10">
            @Html.EditorFor(m => m.ConfirmPassword, inputStyles)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}