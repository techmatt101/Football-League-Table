@model FootballLeagueTable.Models.Account.LoginView
@{
    ViewBag.Title = "Login";

    var inputStyles = new {htmlAttributes = new {@class = "form-control"}};
    var lableStyles = new {@class = "col-md-2 control-label"};
    var validationStyles = new {@class = "text-danger"};
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"})) {
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", validationStyles)
    <div class="form-group">
        @Html.LabelFor(m => m.Username, lableStyles)
        <div class="col-md-10">
            @Html.EditorFor(m => m.Username, inputStyles)
            @Html.ValidationMessageFor(m => m.Username, "", validationStyles)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, lableStyles)
        <div class="col-md-10">
            @Html.EditorFor(m => m.Password, inputStyles)
            @Html.ValidationMessageFor(m => m.Password, "", validationStyles)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Log in" class="btn btn-default" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Register as a new user", "Register", "Account")
</p>